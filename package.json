{
  "name": "galactic-trader",
  "version": "1.0.0",
  "description": "A space trading game built with Elm",
  "main": "index.js",
  "scripts": {
    "start": "elm-live src/Main.elm --open -- --output=elm.js",
    "build": "elm make src/Main.elm --output=public/elm.js",
    "copy-assets": "node scripts/copy-assets.js",
    "dev": "npm-run-all --parallel start copy-assets",
    "deploy": "npm run build && npm run copy-assets"
  },
  "dependencies": {
    "elm": "^0.19.1-5",
    "elm-live": "^4.0.2",
    "npm-run-all": "^4.1.5"
  },
  "author": "",
  "license": "MIT"
}
